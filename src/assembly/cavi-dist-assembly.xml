<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>cavi-dist-assembly</id>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>target/${pom.artifactId}-${pom.version}.jar</source>
            <outputDirectory>./</outputDirectory>
        </file>
    </files>
    <fileSets>
        <fileSet>
            <directory>target/lib/</directory>
            <outputDirectory>./lib</outputDirectory>
        </fileSet>
        <!-- if a project contains External Assets, include it by default as convenience -->
        <fileSet>
            <directory>External Assets/</directory>
            <outputDirectory>./External Assets</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>